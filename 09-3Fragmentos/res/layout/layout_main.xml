<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fresh_pruple"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <fragment
        android:id="@+id/first_fragment"
        android:name="es.jimenezfrontend.multiplefragments.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        tools:layout="@layout/superior_fragment" />

    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:layout_height="0dip" >

        <fragment
            android:id="@+id/second_fragment"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:name="es.jimenezfrontend.multiplefragments.SecondFragment"
            tools:layout="@layout/bottom_left_fragment" />

        <fragment
            android:id="@+id/third_fragment"
            android:layout_width="0dip"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:name="es.jimenezfrontend.multiplefragments.ThirdFragment"
            tools:layout="@layout/bottom_right_fragment" />
    </LinearLayout>

</LinearLayout>